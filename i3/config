# power control (stolen from http://moparx.com/configs/i3/)
# Add a small delay to prevent suspend races
# https://bugs.launchpad.net/ubuntu/+source/unity-2d/+bug/830348
# NOTE: to get this to work, needed to add the following lines 
# using `sudo visudo` (replace username and hostname as needed):
#
# username hostname = (root) NOPASSWD: /usr/sbin/pm-suspend
# username hostname = (root) NOPASSWD: /usr/sbin/pm-hibernate
# username hostname = (root) NOPASSWD: /sbin/reboot
# username hostname = (root) NOPASSWD: /sbin/poweroff

set $Locker i3lock -t -i ~/.config/i3/background.png && sleep 1 
#set $Locker i3lock

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && sudo pm-suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && sudo pm-hibernate, mode "default"
    bindsym r exec --no-startup-id sudo /sbin/reboot, mode "default"
    bindsym Shift+s exec --no-startup-id sudo /sbin/poweroff, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+BackSpace mode "$mode_system"
