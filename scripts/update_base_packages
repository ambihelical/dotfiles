#!/bin/bash
# 
# Make sure some system packages are present. These are only the 
# most basic packages needed to set up a basic system, plus a few
# nice-to-haves.

if [[ $EUID -ne 0 ]]; then
	echo "This script must be run with root privileges" 1>&2
	exit 1
fi

p=""
if [ "${OSTYPE:0:10}" == 'linux-gnue' ]; then
  p="$p ack-grep autojump htop screen"
  apt-get --quiet --yes --no-install-recommends install $p
elif [ "${OSTYPE:0:5}" == 'linux' ]; then 
  apt-get --quiet --yes purge mono-runtime firefox
  p="$p ttf-mscorefonts-installer otf-stix unifont"
  p="$p aptitude python3-pip"
  p="$p ack-grep autojump htop screen unzip"
  p="$p curl wget suckless-tools"
  p="$p git-core gitk git-doc git-gui"
  p="$p vim-gnome exuberant-ctags gnome-terminal"
  p="$p python3 python3-gi python3-dev"
  p="$p clipit pithos i3 i3lock qalculate"
  p="$p aptitude htop screen unzip"
  p="$p nemo nemo-fileroller a2ps"
  p="$p libiw-dev chromium-browser"
  apt-get --quiet --yes --no-install-recommends install $p
elif [ "${OSTYPE:0:6}" == 'darwin' ]; then 
  port selfupdate
  p="$p wget unison ctags"
  p="$p highlight p5-app-ack grep +nls"
# lesspipe
  port install -p $p 
fi

# install some python stuff
# for now assume pip on all platforms
pip3 install --upgrade i3pystatus netifaces colour psutil basiciw
