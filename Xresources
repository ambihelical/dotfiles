! make sure to use 256 colors
xterm*termName: xterm-256color

! do not update when contents offscreen
xterm*fastScroll: true

! async scrolling
xterm*multiScroll: true

! do not scroll when more output
xterm*scrollTtyOutput: false

! scroll on key input
xterm*scrollKey: true

! better meta key handling (emacs)
! will still need mapping for e.g. C-;
xterm*metaSendsEscape: true
xterm*modifyOtherKeys: 1

! enable copy/paste to clipboard
xterm*VT100.Translations: #override \
                 Ctrl Shift <Key>V:    insert-selection(CLIPBOARD) \n\
                 Ctrl Shift <Key>C:    copy-selection(CLIPBOARD)

