[alias]
	st = status -sb
	ci = commit
	cia = commit --amend
	co = checkout
	br = branch -vv --sort=-authordate
	sm = submodule
	smu = submodule update --init --recursive
	list = log --pretty=format:'%h %s' -50
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	last = log -1 HEAD
	di = diff --color
	dc = diff --color --cached
	ds = diff --stat
	unadd = reset -- HEAD
	rbi = rebase -i
	rbc = rebase --continue
	rba = rebase --abort
	fap = fetch --all --prune
	ftp = fetch --all --prune
	pick = cherry-pick
	picka = cherry-pick --abort
	where = name-rev --name-only
	wt = worktree
	sw = switch
[color]
	status = true
	ui = auto
	diff = auto
	branch = auto
	status = auto
[color "branch"]
	current = red
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[gc]
	pruneexpire = 90 days
	auto = 0
[clean]
	requireForce = true
[github]
	user = ambihelical
[core]
	excludesfile = ~/.config/git/ignore
[user]
