#!/bin/bash
. ~/bin/common/linux.sh
linux=$(linux_distribution_name)
version=$(linux_distribution_version)

if [[ "$linux" != "Ubuntu" ]]; then
	echo "Only Ubuntu for now"
	exit 1
fi
host=$(uname -n)

# disable suspend for hosts where it is broken
nosuspend=0
[ "$host" == "jh-rvueb" ] && nosuspend=1


# Fixing hibernate problems: http://blog.roland-kluge.de/?p=793
#                            http://askubuntu.com/q/1792
#
# the version comparison here is conservative, old versions may act like 15.10, I don't know
systemd=1510

case $1 in
suspend)
	if [ "$nosuspend" == "1" ]; then
		echo "Suspend doesn't work on this machine! Last time I checked, anyway"
	elif [ "$version" -ge "$systemd" ]; then
		dbus-send --system --print-reply --dest="org.freedesktop.login1" /org/freedesktop/login1 org.freedesktop.login1.Manager.Suspend boolean:true
	else
		dbus-send --system --print-reply --dest="org.freedesktop.UPower" /org/freedesktop/UPower org.freedesktop.UPower.Suspend
	fi
	;;
hibernate)
	if [ "$version" -ge "$systemd" ]; then
		dbus-send --system --print-reply --dest="org.freedesktop.login1" /org/freedesktop/login1 org.freedesktop.login1.Manager.Hibernate boolean:true
	else
		dbus-send --system --print-reply --dest="org.freedesktop.UPower" /org/freedesktop/UPower org.freedesktop.UPower.Hibernate
	fi
	;;
restart)
	if [ "$version" -ge "$systemd" ]; then
		dbus-send --system --print-reply --dest="org.freedesktop.login1" /org/freedesktop/login1 org.freedesktop.login1.Manager.Reboot boolean:true
	else
		dbus-send --system --print-reply --dest="org.freedesktop.ConsoleKit" /org/freedesktop/ConsoleKit/Manager org.freedesktop.ConsoleKit.Manager.Restart
	fi
	;;
shutdown)
	if [ "$version" -ge "$systemd" ]; then
		dbus-send --system --print-reply --dest="org.freedesktop.login1" /org/freedesktop/login1 org.freedesktop.login1.Manager.PowerOff boolean:true
	else
		dbus-send --system --print-reply --dest="org.freedesktop.ConsoleKit" /org/freedesktop/ConsoleKit/Manager org.freedesktop.ConsoleKit.Manager.Stop
	fi
	;;
esac

