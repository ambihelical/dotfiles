#!/bin/bash

# local configuration for i3

# Generic keyboard setup
# - caps is hyper
# - make compose key be right control
setxkbmap -option '' -option 'caps:hyper' -option 'compose:rctrl'

# Put hyper key on mod4 as the Unix gods intended
xkb=${HOME}/.config/xkb
if [ -r "${xkb}" ]; then
	 setxkbmap -print | sed -e '/xkb_symbols/s/"[[:space:]]/+local&/' | xkbcomp -I${xkb} - ${DISPLAY} &> /dev/null
fi
