
# kill startup message
startup_message off

# define a bigger scrollback, default is 100 lines
defscrollback 12000

# no bell flash
vbell off

# remap CTRL-A to CTRL-]
#escape ^]]

# status bar
hardstatus on
hardstatus alwayslastline "%{ky}%S%{kk} %{rk}%H %{gk}%c %{yk}%M%d %{wk}%?%-Lw%?%{bw}%n*%f %t%?(%u)%?%{wk}%?%+Lw%?"

# xterm scrollback
termcapinfo xterm* ti@:te@ 
